# Build runtime image
FROM --platform=linux/amd64 mcr.microsoft.com/dotnet/runtime-deps:7.0-alpine
ENV ACCEPT_EULA=Y
ENV DOTNET_CLI_TELEMETRY_OPTOUT=1
ENV DOTNET_NOLOGO=true
RUN addgroup -S dotauthgroup && adduser -S dotauthuser -G dotauthgroup
USER dotauthuser
COPY artifacts/publish/postgres/ app/
WORKDIR /app
ENTRYPOINT ["./dotauth.authserverpg"]

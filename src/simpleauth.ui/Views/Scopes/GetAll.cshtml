@model DotAuth.Shared.Models.Scope[]
@{
    ViewBag.Title = "Manage Scopes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <h5>@ViewBag.Title</h5>
                <div class="row">
                    <div class="col l12 s12">
                        <table class="bordered">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Icon</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var scope in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("Get", "Scopes", new {id = scope.Name})" class="inline">
                                                <i class="valign-wrapper material-icons prefix center">edit</i>
                                            </a>
                                        </td>
                                        <td>
                                            <span>@scope.Name</span>
                                        </td>
                                        <td>
                                            <span>@scope.Description</span>
                                        </td>
                                        <td>
                                            @if (scope.IconUri != null)
                                            {
                                                <img alt="icon" src="@scope.IconUri"/>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

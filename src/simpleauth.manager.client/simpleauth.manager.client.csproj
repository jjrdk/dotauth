<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SimpleAuth Data Management Client</Description>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <AssemblyName>simpleauth.manager.client</AssemblyName>
    <PackageId>simpleauth.manager.client</PackageId>
    <RootNamespace>SimpleAuth.Manager.Client</RootNamespace>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(PackageId).xml</DocumentationFile>
  </PropertyGroup>

  <Import Project="../../shared.proj" />

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth.shared\simpleauth.shared.csproj" />
  </ItemGroup>
</Project>

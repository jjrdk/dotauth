<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <Description>SimpleAuth SMS Authentication Library</Description>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>simpleauth.sms</AssemblyName>
    <PackageId>simpleauth.sms</PackageId>
    <RootNamespace>SimpleAuth.Sms</RootNamespace>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <EnableDefaultRazorGenerateItems>true</EnableDefaultRazorGenerateItems>
    <WarningsAsErrors />
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(PackageId).xml</DocumentationFile>
  </PropertyGroup>

  <Import Project="../../shared.proj" />
  <ItemGroup>
    <None Remove="Areas\**\*.cshtml" />
  </ItemGroup>
  <ItemGroup>
    <RazorGenerate Include="Areas\sms\Views\**\*.cshtml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth\simpleauth.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.TagHelpers" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Razor.Design" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.Extensions" Version="2.2.0" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" Version="3.3.3.26" />
    <!--<PackageReference Include="microsoft.extensions.fileproviders.embedded" Version="2.2.0" />-->
  </ItemGroup>
</Project>

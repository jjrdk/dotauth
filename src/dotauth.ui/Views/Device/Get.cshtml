@{
	ViewBag.Title = "Device Authorization";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DotAuth.ViewModels.DeviceAuthorizationViewModel
<div class="row">
 <div class="col s12 m6 offset-m3">
  <div class="card">
   <div class="card-image">
	<img alt="Device Authorization" src="~/img/authorize_device.png" />
   </div>
   <form name="form" enctype="application/x-www-form-urlencoded" method="POST" action="@Url.Action("Approve", "Device")">
	<div class="card-content">
	 <span class="card-title">@ViewBag.Title</span>
	 <div>By entering and submitting the code shown on your device, you are confirming that you are authorizing the device to access the approved content on your behalf.</div>
	 <div class="row">
	  <div class="input-field col s12">
	   <i class="material-icons prefix">account_circle</i>
	   <input id="code" name="code" type="text" value="@Model.Code" />
	   <label for="code">User Code</label>
	  </div>
	  <div class="col s12">Before submitting, please check that the code entered matches the code from your device.</div>
	 </div>
	</div>
	<div class="card-action">
	 <div class="row">
	  <div class="col s4"></div>
	  <div class="col s4 center">
	   <button type="submit" class="waves-effect waves-light btn blue darken-3">Authorize</button>
	  </div>
	  <div class="col s4"></div>
	 </div>
	</div>
   </form>
  </div>
 </div>
</div>

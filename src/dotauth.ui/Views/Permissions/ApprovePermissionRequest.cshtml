@model DotAuth.ViewModels.ErrorViewModel
@{
    ViewBag.Title = @Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col s12">
        <div class="card">
            <div class="card-content">
                <span class="card-title">@Model.Title</span>
                <div class="row">
                    <div class="col red-text large">
                        @Model.Message
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

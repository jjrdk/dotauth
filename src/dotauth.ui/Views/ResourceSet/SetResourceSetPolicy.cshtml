    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col s12 m6 offset-m3">
        <div class="col s12">
            <div class="card">
                <div class="card-content">
                    <h5>Success</h5>
                    <div>
                        Resource updated.
                    </div>
                </div>
                <div class="card-action">
                    <div class="row">
                        <div class="col s12 m12">
                            @Html.ActionLink("Manage UMA Resources", "GetResourceSets", "ResourceSet", new { ui = "1" }, new { @class = "btn blue darken-3 waves-effect waves-light right" })

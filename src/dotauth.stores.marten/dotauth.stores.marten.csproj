<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>DotAuth Marten Stores</Description>
        <Title>DotAuth Marten Stores</Title>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
        <AssemblyName>dotauth.stores.marten</AssemblyName>
        <PackageId>dotauth.stores.marten</PackageId>
        <RootNamespace>DotAuth.Stores.Marten</RootNamespace>
        <Nullable>enable</Nullable>
    </PropertyGroup>
    <PropertyGroup>
        <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(PackageId).xml</DocumentationFile>
    </PropertyGroup>
    <Import Project="../../shared.projinfo" />
    <ItemGroup Condition="'$(TargetFramework)'=='net7.0'">
        <PackageReference Include="marten" Version="5.10.1" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0-rc.2.22472.3" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0-rc.2.22472.3" />
    </ItemGroup>
    <ItemGroup Condition="'$(TargetFramework)'=='net6.0'">
        <PackageReference Include="marten" Version="5.10.1" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.2" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\dotauth.shared\dotauth.shared.csproj" />
    </ItemGroup>
</Project>

    <AssemblyName>simpleauth.userinfointrospection</AssemblyName>
    <PackageId>simpleauth.userinfointrospection</PackageId>
    <RootNamespace>SimpleAuth.UserInfoIntrospection</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard2.0|AnyCPU'">

  <Import Project="..\..\shared.proj" />

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\simpleauth.client\simpleauth.client.csproj" />
  </ItemGroup>

</Project>

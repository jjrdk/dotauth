@{
    ViewBag.Title = "Send code";
}

@model  SimpleAuth.ViewModels.CodeViewModel

@section PageTitle
{
    <h1>Send Code</h1>
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">Confirmation code</div>
            <div class="panel-body">
                @using (Html.BeginForm("SendCode", "Authenticate", null, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <!-- Authorization request code -->
                    @Html.TextBoxFor(i => i.AuthRequestCode, new { type = "hidden" })
                    <!-- Claim -->
                    @Html.TextBoxFor(i => i.ClaimName, new { type = "hidden" })
                    <fieldset class="form-group">
                        <label class="control-label">@Model.ClaimName</label>
                        @Html.TextBoxFor(i => i.ClaimValue, new { type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ClaimValue, "", new { @class = "text-danger" })
                    </fieldset>
                    <!-- Confirmation code -->
                    <fieldset class="form-group">
                        <label class="control-label">Code</label>
                        @Html.TextBoxFor(i => i.Code, new { type = "number", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                    </fieldset>
                    <!-- Submit buttons code -->
                    <fieldset class="form-group">
                        <button type="submit" class="btn btn-primary" name="Action" value="submit">Validate confirmation code</button>
                        <button type="submit" class="btn btn-primary" name="Action" value="resend">Resent confirmation code</button>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>